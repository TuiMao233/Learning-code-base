  <div id="app">
    <header>
      <a class="header_title" href="/movie">white电影</a>
      <a class="header_search" href="/search">搜索</a>
    </header>
    <div class="page">
      <h1 class="title"><%= title %></h1>
      <section class="info">
        <div class="left">
          <p class="rating">
            <span>评分:</span>
            <strong><%= score %></strong>
            <span class="ratingNum">52996人评价</span>
          </p>
          <p class="meta">
            导演: <%= director %>; 编剧: <%= screenwriter %> 主演: <%= starring %>
            <!-- 导演、编剧、演员信息 -->
          </p>
        </div>
        <div class="right">
          <a href="javascript:">
            <img src="<%= image %>" alt="<%= title %>">
          </a>
        </div>
      </section>
      <section class="intro">
        <h2><%= title %>的剧情简介</h2>
        <div class="bd">
          <p><%= summary %></p>
        </div>
      </section>
    </div>
  </div>
</body>

</html>