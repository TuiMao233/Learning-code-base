{
  "name": "create-uniapp-view",
  "displayName": "create-uniapp-view",
  "keywords": [
    "uniapp",
    "page",
    "components"
  ],
  "publisher": "mrmaoddxxaa",
  "description": "快速创建uniapp视图与组件!",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:create-uniapp-view.createPage",
    "onCommand:create-uniapp-view.createComponent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "create-uniapp-view-options",
      "properties": {
        "create-uniapp-view.typescript": {
          "type": "boolean",
          "default": false,
          "description": "creation type is typescript"
        },
        "create-uniapp-view.style": {
          "type": [
            "string"
          ],
          "default": "css",
          "enum": [
            "css",
            "scss",
            "less",
            "stylus",
            "sass"
          ],
          "description": "CSS preprocessor type"
        }
      }
    },
    "commands": [
      {
        "command": "create-uniapp-view.createPage",
        "title": "创建uniapp页面"
      },
      {
        "command": "create-uniapp-view.createComponent",
        "title": "创建uniapp组件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "navigation@9",
          "command": "create-uniapp-view.createPage",
          "title": "创建uniapp页面"
        },
        {
          "group": "navigation@9",
          "command": "create-uniapp-view.createComponent",
          "title": "创建uniapp组件"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}